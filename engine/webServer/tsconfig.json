{
  "compilerOptions": {
    "module": "commonjs",
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "strict": true,
    "allowJs": true,
    "noEmit": true,
    "outDir": "./bin",
    "target": "es2015",
    "lib": [
      "dom",
      "es2015",
      "esnext.asynciterable"
    ],
    "baseUrl": "./",
    "paths": {
      "@common/*": [
        "../common/*"
      ],
      "@serverCommon/*": [
        "../serverCommon/*"
      ]
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}