{
  "compileOnSave": true,
  "compilerOptions": {
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "removeComments": false,
    "allowUnreachableCode": true,
    "allowJs": true,
    "strict": true,
    "moduleResolution": "node",
    "declaration": true,
    "target": "es2015",
    "lib": [
      "dom",
      "es2015",
      "esnext.asynciterable"
    ],
    "outDir": "./lib/",
    "sourceMap": true,
    "baseUrl": "./src",
    "jsx": "react",
    "paths": {
    }
  },
  "exclude": [
    "lib",
    "node_modules"
  ]
}
