{
  "compilerOptions": {
    "module": "commonjs",
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "inlineSourceMap": true,
    "strict": true,
    "noImplicitAny": false,
    "allowJs": true,
    "noEmit": true,
    "outDir": "./bin",
    "baseUrl": "./",
    "paths": {
      "@common/*": [
        "../common/*"
      ]
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}