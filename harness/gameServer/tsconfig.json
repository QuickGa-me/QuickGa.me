{
  "compilerOptions": {
    "noEmitOnError": false,
    "experimentalDecorators": true,
    "allowUnreachableCode": true,
    "emitDecoratorMetadata": true,
    "strict": true,
    "target": "es2017",
    "module": "commonjs",
    "inlineSourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "noEmit": true,
    "pretty": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    "outDir": "./dist",
    "skipLibCheck": true,
    "paths": {
      "@common/*": [
        "../../engine/common/src/*"
      ],
      "@serverCommon/*": [
        "../serverCommon/src/*"
      ],
      "@framework-server/*": [
        "../../framework/server/*"
      ],
      "@framework-common/*": [
        "../../framework/common/*"
      ]
    }
  },
  "exclude": ["./node_modules"]
}
